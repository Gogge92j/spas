<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:elevation="100dp"
        card_view:cardBackgroundColor="@color/cardview_shadow_end_color"
        card_view:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/notitz_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:text="Husk dit"
                android:textSize="26dp" />

            <TextView
                android:id="@+id/notitz_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/notitz_title"
                android:layout_margin="2dp"
                android:lineSpacingExtra="8dp"
                android:text="og glem for guds skyld ikke dat"
                android:textSize="18dp" />


            <TextView
                android:id="@+id/notitz_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/notitz_text"
                android:layout_margin="2dp"
                android:lineSpacingExtra="8dp"
                android:text="12:00"
                android:textSize="36dp" />

            <Switch
                android:id="@+id/notitz_change_state"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent" />

            <ImageButton
                android:id="@+id/notitz_delete"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/notitz_change_state"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_delete" />

            <CheckBox
                android:id="@+id/notitz_repeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/notitz_time" />

            <TextView
                android:id="@+id/notitz_repeat_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/notitz_time"
                android:layout_toRightOf="@id/notitz_repeat"
                android:paddingTop="7dp"
                android:text="Repeat" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/notitz_repeat"

                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/notitz_monday"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:button="@android:color/transparent"
                    android:text="M"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:background="@drawable/btn_notitz"
                    android:layout_margin="6dp" />

                <CheckBox
                    android:id="@+id/notitz_tuesday"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:button="@android:color/transparent"
                    android:text="T"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:background="@drawable/btn_notitz"
                    android:layout_margin="6dp" />

                <CheckBox
                    android:id="@+id/notitz_wednesday"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:button="@android:color/transparent"
                    android:text="W"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:background="@drawable/btn_notitz"
                    android:layout_margin="6dp" />

                <CheckBox
                    android:id="@+id/notitz_thursday"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:button="@android:color/transparent"
                    android:text="T"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:background="@drawable/btn_notitz"
                    android:layout_margin="6dp" />

                <CheckBox
                    android:id="@+id/notitz_friday"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:button="@android:color/transparent"
                    android:text="F"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:background="@drawable/btn_notitz"
                    android:layout_margin="6dp" />

                <CheckBox
                    android:id="@+id/notitz_saturday"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:button="@android:color/transparent"
                    android:text="S"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:background="@drawable/btn_notitz"
                    android:layout_margin="6dp" />

                <CheckBox
                    android:id="@+id/notitz_sunday"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:button="@android:color/transparent"
                    android:text="S"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:background="@drawable/btn_notitz"
                    android:layout_margin="6dp" />

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>